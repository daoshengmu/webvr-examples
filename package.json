  "bugs": {
    "url": "https://github.com/daoshengmu/webvr-sample/issues"
  },
  "homepage": "https://github.com/daoshengmu/webvr-sample#readme",
  "devDependencies": {
    "budo": "^8.1.0",
    "browserify": "^11.0.1",
    "ghpages": "^0.0.5",
    "ray-input": "^0.1.2",
    "semistandard": "^8.0.0",
    "snazzy" : "^3.0.0",
    "three": "^0.84.0",
